<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cálculo de Figuras Geométricas"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Elipse -->
        <TextView
            android:text="1. Elipse"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etRadioMayor"
            android:hint="Radio mayor (a)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <EditText
            android:id="@+id/etRadioMenor"
            android:hint="Radio menor (b)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnCalcularElipse"
            android:text="Calcular Elipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvResultadoElipse"
            android:text="Resultado Elipse: Área y Perímetro"
            android:paddingTop="4dp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Trapecio Irregular -->
        <TextView
            android:text="2. Trapecio Irregular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etBaseMayor"
            android:hint="Base mayor (B)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <EditText
            android:id="@+id/etBaseMenor"
            android:hint="Base menor (b)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <EditText
            android:id="@+id/etAltura"
            android:hint="Altura (h)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <EditText
            android:id="@+id/etLado1"
            android:hint="Lado no paralelo 1 (L1)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <EditText
            android:id="@+id/etLado2"
            android:hint="Lado no paralelo 2 (L2)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnCalcularTrapecio"
            android:text="Calcular Trapecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvResultadoTrapecio"
            android:text="Resultado Trapecio: Área y Perímetro"
            android:paddingTop="4dp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Pentágono Regular -->
        <TextView
            android:text="3. Pentágono Regular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etLadoPentagono"
            android:hint="Longitud de un lado (l)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800" />

        <Button
            android:id="@+id/btnCalcularPentagono"
            android:text="Calcular Pentágono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvResultadoPentagono"
            android:text="Resultado Pentágono: Área y Perímetro"
            android:paddingTop="4dp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
